<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageButton
        android:id="@+id/btn_ticketmaster"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:src = "@drawable/ic_ticket"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/btn_recipe"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_ticketmaster"
        android:layout_centerHorizontal="true"
        android:src = "@drawable/ic_recipes"
        android:scaleType="fitCenter"
         />

    <ImageButton
        android:id="@+id/btn_covid19"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_recipe"
        android:layout_centerHorizontal="true"
        android:src = "@drawable/ic_virus"
        android:scaleType="fitCenter"
         />

    <ImageButton
        android:id="@+id/btn_audio"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/btn_covid19"
        android:layout_centerHorizontal="true"
        android:src = "@drawable/ic_audio"
        android:scaleType="fitCenter" />
</RelativeLayout>