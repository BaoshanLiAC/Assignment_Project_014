<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#B4EEB4"
    android:gravity="center">


    <ImageView
        android:id="@+id/recipe_nav_image"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_recipes" />

    <TextView
        android:id="@+id/nav_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipe"
        android:layout_toRightOf="@+id/recipe_nav_image"
        android:textColor="#000000"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/nav_tv_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ren00038@Algonquinlive.com"
        android:layout_below="@id/nav_tv_authername"
        android:layout_toRightOf="@+id/recipe_nav_image"
        android:textColor="#000000"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/nav_tv_authername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chunyan Ren"
        android:layout_below="@id/nav_tv_name"
        android:layout_toRightOf="@+id/recipe_nav_image"
        android:textColor="#000000"
        android:textSize="18dp"/>

</RelativeLayout>