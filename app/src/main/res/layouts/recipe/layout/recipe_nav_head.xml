<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="#B4EEB4"
    android:gravity="center">

    <TextView
        android:id="@+id/nav_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Name: Recipe"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/nav_tv_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ren00038@Algonquinlive.com"
        android:layout_below="@id/nav_tv_authername"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/nav_tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:layout_below="@id/nav_tv_mail"
        android:textColor="#000000"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/nav_tv_authername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chunyan Ren"
        android:layout_below="@id/nav_tv_name"
        android:textColor="#000000"
        android:textSize="16dp"/>

</RelativeLayout>