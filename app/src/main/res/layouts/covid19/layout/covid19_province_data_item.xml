<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/covid19_province_data_item_img1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_weight=".10"
        android:src="@drawable/ic_baseline_location_on_24" />
    <TextView
        android:id="@+id/covid19_province_data_item_province_name"
        android:layout_width="0dp"
        android:layout_weight=".30"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/covid19_province_data_item_img1"
        android:layout_centerVertical="true"
        android:textColor="#FF6D00"
        android:text="TextView" />

    <ImageView
        android:id="@+id/covid19_province_data_item_img2"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_weight=".10"
        android:layout_toEndOf="@+id/covid19_province_data_item_province_name"
        android:src="@drawable/ic_baseline_coronavirus_24" />
    <TextView
        android:id="@+id/covid19_province_data_item_province_case"
        android:layout_width="0dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:layout_toEndOf="@+id/covid19_province_data_item_img2"
        android:gravity="center"
        android:text="TextView" />
    <ImageView
        android:id="@+id/covid19_province_data_item_img3"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight=".10"
        android:layout_toEndOf="@+id/covid19_province_data_item_province_case"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/covid19_province_data_item_province_change"
        android:layout_width="0dp"
        android:layout_centerVertical="true"
        android:layout_weight=".20"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/covid19_province_data_item_img3"
        android:gravity="center"
        android:text="TextView" />


</LinearLayout>