<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ac.assignment_project_014">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- RECIPE ACTIVITIES -->
        <activity
            android:name=".recipe.SearchHistoryActivity"
            android:label="Recipe"
            android:theme="@style/AppTheme.NoToolBar" />

        <activity
            android:name=".recipe.RecipeMainActivity"
            android:label="Recipe"
            android:theme="@style/AppTheme.NoToolBar" />

        <activity android:name=".recipe.EmptyActivity"
            android:theme="@style/AppTheme.NoBar"/>

        <!-- COVID-19 ACTIVITIES -->
        <activity
            android:name=".covid19.Covid19CaseDataMainActivity"
            android:label="COVID-19"
            android:theme="@style/AppTheme.NoToolBar" />
        <activity
            android:name=".covid19.Covid19SearchResultActivity"
            android:label="COVID-19"
            android:theme="@style/AppTheme.NoToolBar" />

        <activity android:name=".covid19.Covid19ArchivedActivity"
            android:label="COVID-19"
            android:theme="@style/AppTheme.NoToolBar"
            tools:ignore="Instantiatable" />
        <activity android:name=".covid19.Covid19EmptyActivity"
            android:label="COVID-19"
            android:theme="@style/AppTheme.NoToolBar"
            tools:ignore="Instantiatable" />

        <!-- Audio ACTIVITIES-->
        <activity android:name=".audio.AudioIndexActivity"
            android:label="Audio Search API"
            android:theme="@style/AppTheme.NoToolBar"/>

        <!-- TICKET ACTIVITIES -->
        <activity android:name=".TicketMaster.TicketMasterSavedEventsActivity"
            android:label="TicketMaster"
            android:theme="@style/AppTheme.NoToolBar"/>
        <activity android:name=".TicketMaster.TicketMasterEventDetailsActivity"
            android:label="TicketMaster"
            android:theme="@style/AppTheme.NoToolBar"/>
        <activity android:name=".TicketMaster.TicketMasterMainActivity"
            android:label="TicketMaster"
            android:theme="@style/AppTheme.NoToolBar"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>